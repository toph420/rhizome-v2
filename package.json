{
  "name": "rhizome-v2-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:next": "next dev",
    "dev:worker": "cd worker && npm run dev",
    "worker": "cd worker && npm start",
    "build:worker": "cd worker && npm run build",
    "stop": "./scripts/stop.sh",
    "status": "./scripts/status.sh",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "docs": "typedoc --out docs/api src/lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:critical": "jest tests/e2e/journeys/critical-paths.spec.ts tests/e2e/smoke.spec.ts tests/integration/database/migrations.test.ts",
    "test:stable": "jest tests/integration/database/ tests/integration/annotation-flow.test.ts src/lib/ecs/",
    "test:flexible": "jest src/components/ src/lib/ --passWithNoTests || true",
    "test:experimental": "jest tests/experimental/ --passWithNoTests",
    "test:critical:all": "npm run test:critical && cd worker && npm run test:critical",
    "test:stable:all": "npm run test:stable && cd worker && npm run test:stable",
    "test:flexible:all": "npm run test:flexible; cd worker && npm run test:flexible || true",
    "test:gates": "npm run test:critical && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "benchmark:annotations": "tsx scripts/benchmark-annotations.ts"
  },
